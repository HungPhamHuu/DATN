<script>
    DanhSachSaleTheoTenThuongHieuTheLoai();
    document.addEventListener('DOMContentLoaded', function () {
        // Lấy các elements cần thiết
        var quantityInput = document.getElementById('quantity');
        var minusButton = document.querySelector('.quantity-left-minus');
        var plusButton = document.querySelector('.quantity-right-plus');

        // Xử lý sự kiện khi click vào nút trừ
        minusButton.addEventListener('click', function () {
            var currentValue = parseInt(quantityInput.value);
            if (currentValue > 1) { // Đảm bảo số lượng không nhỏ hơn 1
                quantityInput.value = currentValue - 1;
            }
        });

        // Xử lý sự kiện khi click vào nút cộng
        plusButton.addEventListener('click', function () {
            var currentValue = parseInt(quantityInput.value);
            var maxValue = parseInt(quantityInput.getAttribute('max')); // Lấy giá trị max
            if (!maxValue || currentValue < maxValue) { // Nếu không có giá trị max hoặc chưa đạt giá trị max
                quantityInput.value = currentValue + 1;
            }
        });
    });
</script>

