            <div class="form-group">
                <label asp-for="TenThuongHieu" class="control-label"></label>
                <input asp-for="TenThuongHieu" class="form-control" />
                <span asp-validation-for="TenThuongHieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a href="~/Admin/ThuongHieu/DanhSach"><i class="fas fa-arrow-circle-left" style="color: #005eff;"></i></a>
        </div>
    </div>
   
</div>



