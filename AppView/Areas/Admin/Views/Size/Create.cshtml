@model AppData.Entities.Models.Size

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form action="~/Admin/Size/Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="SizeNumber" class="control-label"></label>
                @Html.TextBoxFor(m => m.SizeNumber, new { @class = "form-control" })
                <span asp-validation-for="SizeNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a href="~/Admin/Size/DanhSach"><i class="fas fa-arrow-circle-left" style="color: #005eff;"></i></a>
        </div>
    </div>
    
</div>



